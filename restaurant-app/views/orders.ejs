<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Orders</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<a href="http://localhost:5500/views/mainpage.html" target="_blank">HOME PAGE</a>
<body>
    <h1>Orders</h1>
    <a href="/orders/new">Create New Order</a>
    <table>
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer ID</th>
                <th>Order Date</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach(order => { %>
                <tr>
                    <td><%= order.order_id %></td>
                    <td><%= order.customer_id %></td>
                    <td><%= order.order_date %></td>
                    <td>$<%= order.total_amount %></td>
                    <td><%= order.status || 'Pending' %></td>
                    <td>
                        <form action="/orders/<%= order.order_id %>/delete" method="POST" style="display:inline;">
                            <button type="submit">Delete Order</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
