<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Order History for <%= customer.first_name %> <%= customer.last_name %></title>
    <link rel="stylesheet" href="/styles.css"> 
    <style>
        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Playwrite GB S', sans-serif;
            background-color: #f4f4f4;
            color: #333;
            padding: 20px;
        }

        h1 {
            color: #ff5722;
            font-size: 2.5rem;
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #ff5722;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #ffe0b2;
        }

        a {
            display: inline-block;
            text-decoration: none;
            background-color: #ff5722;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-align: center;
            margin-top: 20px;
            transition: background-color 0.3s, transform 0.3s;
        }

        a:hover {
            background-color: #e64a19;
            transform: scale(1.05);
        }
    </style>
</head>
<body>

    <h1>Order History for <%= customer.first_name %> <%= customer.last_name %></h1>

    <table>
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach(order => { %>
                <tr>
                    <td><%= order.order_id %></td>
                    <td><%= order.order_date %></td>
                    <td><%= order.status %></td>
                    <td>
                        <!-- Placeholder for any actions you want to add -->
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <a href="/customers">Back to Customers</a>

</body>
</html>
